<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wind_speed_converter.view.activities.AddUnitsActivity">
    android:id="@+id/add_lyt_rel">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/add_tf_metric"
        android:layout_below="@+id/add_tv_title"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/add_tf_knots"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/add_tf_metric" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/add_tf_beaufort"
        android:layout_above="@+id/add_btn_calc"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/add_tv_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/add_multiple_units" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/add_tv_metric"
        android:text="@string/unit_metric"
        android:layout_alignTop="@+id/add_tf_metric"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/unit_knots"
        android:id="@+id/add_tv_knots"
        android:layout_alignTop="@+id/add_tf_knots"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/unit_beaufort"
        android:id="@+id/add_tv_beuafort"
        android:layout_alignBottom="@+id/add_tf_beaufort" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/add_tv_result"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/add_tv_equals"
        android:layout_alignEnd="@+id/add_tv_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/add_tv_addi1"
        android:text="@string/addition"
        android:layout_below="@+id/add_tf_metric"
        android:layout_alignStart="@+id/add_tv_knots" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/add_tv_equals"
        android:text="@string/equals"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/add_tv_addi2"
        android:text="@string/addition"
        android:layout_below="@+id/add_tf_knots"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/add_tv_curunit"
        android:layout_alignBottom="@+id/add_tv_result"
        android:layout_toEndOf="@+id/add_tv_beuafort" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_btn_calc"
        android:text="@string/add_units"
        android:layout_above="@+id/add_tv_result"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
